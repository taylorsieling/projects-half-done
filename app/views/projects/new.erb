<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Create a New Project!
      </h1>
    </div>
  </div>
</section>

<div class="hero is-light">

    <div class="hero-body mx-6 px-6">

        <form method="POST" action="/projects">

            <div class="field">
                <label for="name" class="label">Project Name: </label>
                <div class="control">
                    <input class="input is-medium" type="text" name="project[name]" id="name">
                </div>
            </div>

            <div class="field">
                <label for="category" class="label">Category: </label>
                <div class="control">
                    <input class="input is-medium" type="text" name="project[category]" id="category">
                </div>
            </div>

            <div class="field">
                <label for="knit_time" class="label">Knit Time:</label>
                <div class="control">
                    <input class="input is-medium" type="number" name="project[knit_time]" id="knit_time">
                </div>
                <p class="help">Knit Time is in hours.</p>
            </div>

            <div class="field">
                <label for="status" class="label">Status:</label>
                <div class="control">
                    <label class="radio">
                        <input type="radio" name="project[status]" id="status" value="Not Started">
                        Not Started
                    </label>
                    <label class="radio">
                        <input type="radio" name="project[status]" id="status" value="In Progress">
                        In Progress
                    </label>
                    <label class="radio">
                        <input type="radio" name="project[status]" id="status" value="Completed">
                        Completed
                    </label>
                </div>
            </div>

            <br><br>

            <div class="field is-grouped">
                <div class="control">
                     <input type="submit" class="button is-medium is-dark" value="Create">
                </div>
                <div class="control">
                    <button class="button is-medium"><a href="/projects/<%="#{current_user.id}"%>">Cancel</a></button>
                </div>
            </div>

        </form>

    </div>

</div>