    <div class="hero is-light">
        <div class="hero-body mx-6 px-6">

        <div class="columns">
            <div class="column is-half">
                <div class="container p-6"> 
                    <h2 class="title is-3">Welcome back!</h2>
                    <h2 class="subtitle is-5">Whether you're here to start a new project, finish an old one, or add hanks of yarn from your last haul, we're happy to have you back!</h2>
                </div>
            </div>

            <div class="columns is-half">
                <div class="container p-6">
                    <form method="POST" action="/login">

                        <div class="field">
                            <label for="username" class="label">Username</label>
                            <div class="control">
                                <input class="input is-medium" type="text" name="user[username]" id="username">
                            </div>
                        </div>

                        <div class="field">
                            <label for="email" class="label">Email</label>
                            <div class="control">
                                <input class="input is-medium" type="email" name="user[email]" id="email">
                            </div>
                        </div>

                        <div class="field">
                            <label for="password" class="label">Password</label>
                            <div class="control">
                                <input class="input is-medium" type="password" name="user[password]" id="password">
                            </div>
                        </div>

                        <br><br>

                        <div class="field is-grouped">
                            <div class="control">
                                <input type="submit" value="Login" class="button is-medium is-dark">
                            </div>
                            <div class="control">
                                <button class="button is-medium"><a href="/">Cancel</a></button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div> 

