<section class="hero is-dark">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        Welcome, <%= "#{@user.username}" %>!
      </h1>
    </div>
  </div>
</section>

<div class="hero is-light">
    <div class="hero-body mx-6 px-6">

    <!--Error-->
    <div class="container">
      <% if flash[:alert] || flash[:message] %>
        <%= flash[:alert] || flash[:message] %>
      <% end %>
    </div><br>

        <div class="container py-6"> 
            <h2 class="title is-4">Your Projects:</h2>
        
        <% if @user.projects  == [] || @user.projects == nil %> 
            <br><p class="subtitle">You do not have any projects!<br>
            <a href="/projects/new">Create your first project here.</a></p>
        <% else %>

        </div>

        <div class="columns is-multiline">
            <% @user.projects.each do |project|%>
                <div class="column is-one-quarter">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                <%= "#{project.name}" %>
                            </p>
                        </header>
                        <div class="card-content">
                            <div class="content">
                                Category: <%= "#{project.category}"%><br>
                                Knit Time: <%= "#{project.knit_time}"%> hours<br>
                                Status: <%= "#{project.status}" %>
                            </div>
                        </div>
                        <footer class="card-footer">
                            <a href="/projects/<%= "#{project.id}" %>" class="card-footer-item">View</a>
                            <a href="/projects/<%= "#{project.id}" %>/edit" class="card-footer-item">Edit</a>
                        </footer>
                    </div>
                </div>
            <% end %>
        </div>

        <% end %>

        <br><br>

        <div class="container py-6"> 
            <h2 class="title is-4">Your Yarn:</h2>

        <% if @user.yarns  == [] || @user.yarns == nil %> 
            <br><p class="subtitle">You do not have any yarn!<br>
            <a href="/yarns/new">Add your first hank of yarn here.</a></p>
        <% else %>
        </div>
        
        <div class="columns is-multiline">
            <% @user.yarns.each do |yarn|%>
                <div class="column is-one-quarter">
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                <%= "#{yarn.brand}" %>: <%= "#{yarn.name}" %>
                            </p>
                        </header>
                        <div class="card-content">
                            <div class="content">
                                Weight: <%= "#{yarn.weight}"%><br>
                                Color: <%= "#{yarn.color}"%><br>
                                Quantity: <%= "#{yarn.quantity}" %>
                            </div>
                        </div>
                        <footer class="card-footer">
                            <a href="/yarns/<%= "#{yarn.id}" %>" class="card-footer-item">View</a>
                            <a href="/yarns/<%= "#{yarn.id}" %>/edit" class="card-footer-item">Edit</a>
                        </footer>
                    </div>
                </div>
            <% end %>
        </div>

        <% end %>

        <br><br>

        <div class="field is-grouped is-grouped-right my-6">
            <p class="control">
                <a class="button is-medium" href="/users/<%="#{current_user.id}/edit"%>">
                    &nbsp Edit Account &nbsp
                </a>
                <form action="/users/<%= "#{current_user.id}" %>" method="post">
                    <input id="hidden" type="hidden" name="_method" value="delete">
                    <input class="button is-medium is-dark" type="submit" value="Delete Account">
                </form>
            </p>
        </div>

    </div>
</div>


